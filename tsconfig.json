{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "noFallthroughCasesInSwitch": false,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@": [
        "src"
      ],
      "@test/*": [
        "test/*"
      ],
      "@test": [
        "test"
      ],
      "@config/*": [
        "test/*"
      ],
      "@config": [
        "config"
      ]
    }
  }
}
